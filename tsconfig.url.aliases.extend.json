{
  "compilerOptions": {
    // baseUrl is optional for plugin, but some IDEs require it
    "baseUrl": "./src",
    // Change paths in package.json (Jest) and .babelrc
    "paths": {
      "~Api/*": ["services/api/*"],
      "~Api": ["services/api"],
      "~Assets/*": ["../assets/*"],
      "~Components/*": ["components/*"],
      "~Constants": ["constants"],
      "~Hooks/*": ["hooks/*"],
      "~Routes*": ["routes/*", "routes"],
      "~Views/*": ["views/*", "views"],
      "~Store": ["store"],
      "~Store/*": ["store/*"],
      "~Styles" : ["styles"],
      "~Theme": ["theme"],
      "~Test/*": ["__test__/*"],
      "~Utils/*": ["utils/*"]
    }
  }
}
