{
  "compilerOptions": {
    // baseUrl is optional for plugin, but some IDEs require it
    "baseUrl": "./src",
    // Change paths in package.json (Jest) and .babelrc
    "paths": {
      "~Api/*": ["services/api/*"],
      "~Api": ["services/api"],
      "~Assets/*": ["assets/*"],
      "~Components/*": ["components/*"],
      "~Hooks/*": ["hooks/*"],
      "~Routes*": ["routes/*", "routes"],
      "~Screens/*": ["screens/*"],
      "~Store/*": ["store/*"],
      "~Theme": ["theme"],
      "~Test/*": ["__test__/*"],
      "~Utils/*": ["utils/*"]
    }
  }
}
